{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "lib": [
      "ES2021",
      "DOM"
    ],
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}